
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://docteurbonnebouffe.com/wp-content/uploads/2013/08/cocktails-les-plus-caloriques.jpg');">
  <div class="banner-content">
    <h1> COCKTAILS</h1>
    <p>Enjoy and participate to create the greatest collection of cocktails...</p>
    <div class="btn btn-primary">
      <%= link_to "Create a new cocktail !", new_cocktail_path %>
    </div>
  </div>
</div>


<div class="container">
  <h2>Vos dernières créations</h2>
  <div class="text-center" id="last_creations">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                 url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
          <div class="card-category">Popular</div>
          <p class="cocktail-name"><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
        </div>

      </div>
    <% end %>

  </div>

